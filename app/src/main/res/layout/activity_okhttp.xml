<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_okhttp_tx_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
            >
        <Button
            android:id="@+id/activity_okhttp_bt_1"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="click"
            android:text="get"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp" />

        <Button
            android:id="@+id/activity_okhttp_bt_2"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="click"
            android:text="postString"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp" />

        <Button
            android:id="@+id/activity_okhttp_bt_3"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="click"
            android:text="postJson"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp" />
        <Button
            android:id="@+id/activity_okhttp_bt_4"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="click"
            android:text="postStream"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp" />

        <Button
            android:id="@+id/activity_okhttp_bt_5"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="click"
            android:text="postfile"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp" />

        <Button
            android:id="@+id/activity_okhttp_bt_6"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="click"
            android:text="postform"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp" />

        <Button
            android:id="@+id/activity_okhttp_bt_7"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="click"
            android:text="postmultipart"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp" />

        <Button
            android:id="@+id/activity_okhttp_bt_8"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="click"
            android:text="gson"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp" />

        <Button
            android:id="@+id/activity_okhttp_bt_9"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="click"
            android:text="cancel"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp" />


       <ImageView android:id="@+id/activity_okhttp_iv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"/>


    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
